-- 1. a)

SELECT LIVROS.TITULO, LIVROS.PRECO_TABELA
FROM LIVROS
WHERE LIVROS.GENERO LIKE 'I%' AND LIVROS.PRECO_TABELA = (SELECT MAX(LIVROS.PRECO_TABELA)
                                                         FROM LIVROS
                                                         WHERE LIVROS.GENERO LIKE 'I%');

-- 1. b)

SELECT LIVROS.TITULO, LIVROS.PRECO_TABELA
FROM LIVROS
WHERE LIVROS.GENERO LIKE 'I%' AND PRECO_TABELA >= ALL (SELECT LIVROS.PRECO_TABELA
                                                       FROM LIVROS
                                                       WHERE LIVROS.GENERO LIKE 'I%');

-- 1. c)

SELECT LIVROS.TITULO, LIVROS.PRECO_TABELA
FROM LIVROS
WHERE LIVROS.GENERO LIKE 'I%' AND NOT EXISTS (SELECT L2.PRECO_TABELA
                                              FROM LIVROS L2
                                              WHERE L2.GENERO LIKE 'I%' AND L2.PRECO_TABELA > LIVROS.PRECO_TABELA);

-- 1. d)

SELECT L1.TITULO, L1.PRECO_TABELA
FROM LIVROS L1, (SELECT MAX(LIVROS.PRECO_TABELA) P_MAX
                 FROM LIVROS
                 WHERE LIVROS.GENERO LIKE 'I%') L2
WHERE L1.GENERO LIKE 'I%' AND L1.PRECO_TABELA = L2.P_MAX;
