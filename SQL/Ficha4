-- 1.
SELECT COUNT (TITULO) AS "TOTAL LIVROS DE INFORMATICA"
FROM LIVROS
WHERE GENERO LIKE 'I%';

-- 2.
SELECT COUNT (LIVROS.TITULO) AS "TOTAL DE LIVROS", ROUND(AVG(LIVROS.PRECO_TABELA),1) AS "PRECO MEDIO", SUM (VENDAS.QUANTIDADE) AS "TOTAL LIVROS VENDIDOS"
FROM LIVROS, VENDAS;

-- 3.
SELECT GENERO, COUNT(*) AS QUANTIDADE
FROM LIVROS
GROUP BY GENERO
ORDER BY GENERO ASC;

-- 4.
SELECT LIVROS.TITULO, MIN(VENDAS.PRECO_UNITARIO) AS "PRECO MAIS BAIXO", MAX (VENDAS.PRECO_UNITARIO) AS "PRECO MAIS ALTO", ROUND(AVG(VENDAS.PRECO_UNITARIO),2)
FROM LIVROS, VENDAS
WHERE VENDAS.CODIGO_LIVRO = LIVROS.CODIGO_LIVRO
AND LIVROS.GENERO LIKE 'I%'
GROUP BY LIVROS.TITULO;
