--1.
SELECT TITULO, LIVROS.DATA_EDICAO
FROM LIVROS
WHERE TO_CHAR(DATA_EDICAO, 'yyyy') = '2011'

--2.
SELECT TO_CHAR(SYSDATE, 'HH:MM:SS') AS "Hora Atual", TO_CHAR(SYSDATE, 'YYYY-MM-DD') AS "Data Atual"
FROM DUAL

--3.
SELECT LIVROS.TITULO, LIVROS.PRECO_TABELA
FROM LIVROS
WHERE (SYSDATE - LIVROS.DATA_EDICAO) <= 80

--4.
SELECT DISTINCT LIVROS.TITULO
FROM LIVROS, VENDAS
WHERE VENDAS.CODIGO_LIVRO = LIVROS.CODIGO_LIVRO AND TO_CHAR(VENDAS.DATA_VENDA, 'YYYY') = '2013' 
AND (TO_NUMBER(TO_CHAR(VENDAS.DATA_VENDA, 'MM')) >= 8 AND TO_NUMBER(TO_CHAR(VENDAS.DATA_VENDA, 'MM')) <= 9)

--5.
SELECT DISTINCT LIVROS.TITULO, VENDAS.DATA_VENDA AS "Data Compra", LIVROS.DATA_EDICAO AS "Data Edição"
FROM LIVROS, VENDAS
WHERE (LOWER(LIVROS.GENERO) = 'informatica' OR LOWER(LIVROS.GENERO) = 'informática') 
AND TO_CHAR(VENDAS.DATA_VENDA, 'MM') = TO_CHAR(LIVROS.DATA_EDICAO, 'MM')
AND VENDAS.CODIGO_LIVRO = LIVROS.CODIGO_LIVRO
