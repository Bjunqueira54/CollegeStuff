--1.
SELECT LIVROS.TITULO
FROM LIVROS, AUTORES
WHERE GENERO = 'Policial' AND AUTORES.NOME = 'Cláudio Tereso' AND LIVROS.CODIGO_AUTOR = AUTORES.CODIGO_AUTOR

--2.
SELECT LIVROS.TITULO
FROM LIVROS, AUTORES
WHERE AUTORES.MORADA LIKE '%Coimbra%' AND LIVROS.CODIGO_AUTOR = AUTORES.CODIGO_AUTOR AND GENERO = 'Policial'

--3.
SELECT AUTORES.NOME
FROM LIVROS, AUTORES
WHERE AUTORES.GENERO_PREFERIDO = LIVROS.GENERO AND AUTORES.CODIGO_AUTOR = LIVROS.CODIGO_AUTOR

--4.
SELECT LIVROS.TITULO, LIVROS.PRECO_TABELA
FROM LIVROS, CLIENTES, VENDAS
WHERE CLIENTES.MORADA LIKE '%Coimbra%' AND VENDAS.CODIGO_CLIENTE = CLIENTES.CODIGO_CLIENTE AND VENDAS.CODIGO_LIVRO = LIVROS.CODIGO_LIVRO

--5.
SELECT AUTORES.NOME
FROM AUTORES, LIVROS, VENDAS, CLIENTES
WHERE AUTORES.N_CONTRIBUINTE = CLIENTES.N_CONTRIBUINTE AND VENDAS.CODIGO_CLIENTE = CLIENTES.CODIGO_CLIENTE

--6.
SELECT AUTORES.NOME, LIVROS.TITULO, LIVROS.GENERO
FROM AUTORES, LIVROS
WHERE AUTORES.GENERO_PREFERIDO != LIVROS.GENERO AND LIVROS.CODIGO_AUTOR = AUTORES.CODIGO_AUTOR
ORDER BY AUTORES.NOME ASC

--7.
SELECT DISTINCT LIVROS.TITULO, LIVROS.PRECO_TABELA*LIVROS.UNIDADES_VENDIDAS*0.3 AS "Rendimentos"
FROM LIVROS, AUTORES
WHERE AUTORES.CODIGO_AUTOR = LIVROS.CODIGO_AUTOR
ORDER BY "Rendimentos" ASC

--8.
SELECT DISTINCT LIVROS.TITULO, LIVROS.PRECO_TABELA*LIVROS.UNIDADES_VENDIDAS*0.3 AS "Rendimentos"
FROM AUTORES, LIVROS
WHERE AUTORES.CODIGO_AUTOR = LIVROS.CODIGO_AUTOR AND LIVROS.PRECO_TABELA*LIVROS.UNIDADES_VENDIDAS*0.3 > 10000
ORDER BY "Rendimentos" ASC

--9. INCOMPLETO
--9.
SELECT DISTINCT LIVROS.TITULO, ROUND(LIVROS.PRECO_TABELA/LIVROS.PAGINAS, 2) AS "Custo Página", ROUND()
FROM LIVROS
WHERE LIVROS.PRECO_TABELA > 400 AND LIVROS.PRECO_TABELA < 700 AND 
