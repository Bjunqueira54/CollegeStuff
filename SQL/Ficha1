-- 1.
SELECT *
FROM AUTORES;

-- 2.
SELECT TITULO
FROM LIVROS;

--3.
SELECT DISTINCT GENERO
FROM LIVROS;

--4.
SELECT TITULO
FROM LIVROS
WHERE PRECO_TABELA BETWEEN 25 AND 35;

--5.
SELECT TITULO, CODIGO_LIVRO
FROM LIVROS
WHERE GENERO = 'Informática';

--6.
SELECT TITULO
FROM LIVROS
WHERE PAGINAS > 500 AND GENERO = 'Policial';

--7.
SELECT DISTINCT GENERO
FROM LIVROS
WHERE PAGINAS > 700 OR PRECO_TABELA > 45;

--8.
SELECT TITULO, PRECO_TABELA
FROM LIVROS
WHERE GENERO = 'Informática'
ORDER BY PRECO_TABELA DESC;

--9.
SELECT ISBN, TITULO, PRECO_TABELA, QUANT_EM_STOCK
FROM LIVROS
WHERE GENERO = 'Informática'
ORDER BY PRECO_TABELA DESC, QUANT_EM_STOCK ASC;

--10.
SELECT DISTINCT CODIGO_AUTOR
FROM LIVROS
WHERE QUANT_EM_STOCK != 0

--11.
SELECT TITULO
FROM LIVROS
WHERE GENERO != 'Policial'

--12.
SELECT TITULO
FROM LIVROS
WHERE NOT GENERO = 'Policial'

--13.
SELECT NOME
FROM AUTORES
WHERE IDADE > 30 AND GENERO_PREFERIDO = 'Policial'
ORDER BY NOME ASC

--14.
SELECT NOME
FROM AUTORES
WHERE NOME LIKE '%r%' AND NOME LIKE '%d%'

--15.
SELECT TITULO
FROM LIVROS
WHERE (TITULO LIKE 'O%st%') OR (TITULO LIKE 'M%to%')

--16.
SELECT TITULO
FROM LIVROS
WHERE GENERO = 'Policial' OR GENERO = 'Romance' OR GENERO = 'Aventura'

--17.
SELECT 'O livro "'||TITULO||'" custa ' ||PRECO_TABELA|| ' euros' "Listagem de Livros"
FROM LIVROS
