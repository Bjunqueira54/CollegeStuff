#include <stdio.h>
#include <stdlib.h>

#define col 4
#define lin 3

void shiftVertical(int desl, int nLin, int nCol, int mat[][nCol])
{
    int aux, i, j, d;
    
    if(desl == 0 || desl >= nLin)
    {
        return;
    }
    
    for(d=0; d<desl; d++)
    {
        for(i=0; i<nLin; i++)
        {
            aux = mat[i][nCol-1];
            
            for(j=(nCol-1); j>0; j--)
            {
                mat[i][j] = mat[i][j-1];
            }
            
            mat[i][0] = aux;
        }
    }
}

int main(int argc, char** argv)
{
    int tab[lin][col];
    
    int deslocamento;
    
    printf("Introduza o numero de linhas a deslocar: ");
    scanf("%d", &deslocamento);
    
    int num = 1;
    
    for(int j=0;j<col;j++)
    {
        for(int i=0;i<lin;i++)
        {
            tab[i][j] = num;
        }
        num++;
    }
    
    for(int j=0; j<col; j++)
    {
        for(int i=0; i<lin; i++)
        {
            printf("%d", tab[i][j]);
        }
        printf("\n");
    }
    
    shiftVertical(deslocamento, lin, col, tab);
    
    printf("\n \n");
    
    for(int j=0; j<col; j++)
    {
        for(int i=0; i<lin; i++)
        {
            printf("%d", tab[i][j]);
        }
        printf("\n");
    }
    
    return (EXIT_SUCCESS);
}

